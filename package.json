{
  "name": "reisetra",
  "private": true,
  "workspaces": {
    "packages": [
      "mint",
      "soda"
    ],
    "nohoist": [
      "**"
    ]
  },
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "ts-jest": "^26.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "commit:signed": "cz -S",
    "build:soda": "yarn workspace soda build",
    "start:soda": "yarn workspace soda start:prod",
    "stop:soda": "yarn workspace soda stop:prod",
    "dev:soda": "yarn workspace soda dev",
    "deploy:soda": "./scripts/deploy.sh",
    "build:mint": "yarn workspace mint build",
    "start:mint": "yarn workspace mint start",
    "dev:mint": "yarn workspace mint dev",
    "deploy:mint": ""
  }
}
